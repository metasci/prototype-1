<!-- Three -->
<section id="three" class="wrapper">
	<div class="inner">
		<h2>Highlights</h2>
		<div class="scrollbox">
			<table class="alt">
				<thead>
					<tr>
						<th>Date</th>
						<th>Time</th>
						<th>Description</th>
					</tr>
				</thead>
				<tbody>
					{{#each highlights}}
						<tr>
							<td>{{this.date}}</td>
							<td>{{this.time}}</td>
							<td>{{this.description}}</td>
						</tr>
					{{/each}}
				</tbody>
			</table>
		</div>	
	</div>
</section>

