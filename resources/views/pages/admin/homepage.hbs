
<div class="container">

    <h2>Highlights</h2>

    <div class="scrollbox">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each highlights}}
                    <tr>
                        <td>{{this.date}}</td>
                        <td>{{this.time}}</td>
                        <td>{{this.description}}</td>
                        <td><button class="btn btn-danger">delete</button></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{!-- add new highlight --}}
    <div class="container topmargin border padding">
        <h4>Add a new highlight</h4>
        <form class="" action="/admin/homepage" method="post">
            <div class="form-group">
                <label for="highlightdate">Date</label>
                <input name="date" type="date" class="form-control" id="highlightdate">
            </div>
            <div class="form-group">
                <label for="highlighttime">Time</label>
                <input name="time" type="time" class="form-control" id="highlighttime">
            </div>
            <div class="form-group">
                <input name="description" type="text" class="form-control" id="highlightdescription" placeholder="Enter highlight description">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    
</div>