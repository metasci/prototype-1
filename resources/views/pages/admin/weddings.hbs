{{#extend "styles"}}
    <link href="https://cdn.quilljs.com/1.3.5/quill.snow.css" rel="stylesheet">
{{/extend}}


<div class="container">
    <h2>Weddings</h2>
    <div class="jumbotron">
        {{{weddings}}}
    </div>

    {{!-- add new rentals --}}
    <div class="container topmargin border padding">
        <h6>Update Wedding Information</h6>
        <form onsubmit="return newWedding(event);">
            <div id="editor">
                {{{weddings}}}
            </div>
            <button type="submit" class="btn btn-primary topmargin">Submit</button>
        </form>
    </div>


</div>

{{#extend "scripts"}}
    <!-- Include the Quill library -->
    <script src="https://cdn.quilljs.com/1.3.5/quill.js"></script>
    <script>
        // Initialize Quill editor
        var quill = new Quill('#editor', {
            theme: 'snow'
        });

        function newWedding(event){
            event.preventDefault();
            
            const data = {};
            data.description = encodeURI($('#editor .ql-editor').html());

            $.post('/admin/weddings', data, function(data, status){
                location.reload();
            });

            return false;
        }
    </script>
{{/extend}}